<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppSmartPlant.Views.EditPage"
             xmlns:vm="clr-namespace:AppSmartPlant.ViewModels"
             Title="{Binding Title}">

    <ContentPage.BindingContext>
        <vm:EditViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <StackLayout Padding="50">
        <Image Source="img_arbol"/>
        <Label Text="Nombre" FontSize="Large"/>
        <Entry Placeholder="Nombre de la planta" Keyboard="Text"/>

        <Label Text="Tipo" FontSize="Large"/>
        <Entry Placeholder="Tipo de planta" Keyboard="Text"/>

        <Button Text="Guardar" CornerRadius="10" Margin="10,20"/>
    </StackLayout>


</ContentPage>